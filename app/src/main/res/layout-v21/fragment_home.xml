<?xml version="1.0" encoding="utf-8"?>
<com.wic.buildher.widget.InsetFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:scaleType="fitEnd"
        android:src="@drawable/background"/>

    <com.wic.buildher.widget.FitPaddingRelativeLayout
        style="@style/TabFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/HugeText"
                fontPath="fonts/BungeeInline.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/build"/>

            <TextView
                style="@style/HugeText"
                fontPath="fonts/Lobster.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/her"/>
        </LinearLayout>

        <TextView
            android:id="@+id/countdown"
            style="@style/HugeText"
            fontPath="fonts/BungeeInline.ttf"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
    </com.wic.buildher.widget.FitPaddingRelativeLayout>
</com.wic.buildher.widget.InsetFrameLayout>
